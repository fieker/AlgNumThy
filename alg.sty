\def\NAme{Kapitel }
\def\chapter{\clearpage\thispagestyle{empty}\global\@topnum\z@
             \@afterindenttrue
             \secdef\@chapter\@schapter}
\def\@makechapterhead#1{\vspace*{50pt}
      {\parindent0pt \centering \underbar{\ifnum \c@secnumdepth >\m@ne
       \LARGE \bf\NAme \thechapter : #1 \fi}
       \par\nobreak \vskip40pt}}
\def\@makeschapterhead#1{\vspace*{50pt}
     {\parindent0pt \centering \underbar{\LARGE\bf #1} \par\nobreak \vskip40pt}}
