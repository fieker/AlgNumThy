\def\subsectionmark#1{} %\def\chaptermark#1{} 
\newdimen\emptyfoot   \advance\headsep by 0.5\baselineskip
\emptyfoot=\topmargin  \advance\emptyfoot by1\baselineskip
 \def\ps@headings{\let\@mkboth=\markboth \topmargin\emptyfoot
          \def\@evenfoot{} \def\@oddfoot{}
               \def\@evenhead{\vtop{\hsize\textwidth
                   \hbox to \textwidth{\bf \thepage \hss \it \leftmark}
                   \vskip 1pt \hrule}\hss}
               \def\@oddhead{\vtop{\hsize\textwidth
                   \hbox to \textwidth{\it \rightmark \hss \bf \thepage}
                   \vskip 1pt \hrule\vss}\hss}
          \def\chaptermark##1{\markboth
            {{\ifnum\c@secnumdepth>\m@ne \NAme \thechapter \quad --- \quad \fi {##1}}}
            {}}
          \def\sectionmark##1{\markright{\thesection\ {##1}}}}
